{
    "name" : "<%= slugAppName %>",
    "description" : "",
    "version" : "1.0.0",
    "author" : "<%= creatorName %> <<%= email %>>",
    "contributors" : [],
    "repository" : {
        "type" : "git",
        "url" : "git://github.com/<%= githubUser %>/<%= slugAppName %>.git"
    },
    "bugs" : "http://github.com/<%= githubUser %>/<%= slugAppName %>/issues",
    "publishConfig" : {
        "registry" : "https://registry.npmjs.org"
    },
    "dependencies": {<% if (framework === 'express') {%>
        "express": "^4.0.0",
        "body-parser": "^1.15.0",
        "swaggerize-express": "^4.0.0"<%}%><% if (framework === 'hapi') {%>
        "hapi": "^9.0.0",
        "swaggerize-hapi": "^2.0.0-"<%}%><% if (framework === 'restify') {%>
        "swaggerize-restify": "^2.0.0",
        "restify": "^4.0.0"<%}%>
    },
    "devDependencies": {
        "tape": "^4",
        "js-yaml": "^3.2.6",
        "eslint": "^2",
        "istanbul": "~0.4.3",
        "supertest": "^1.2.0"
    },
    "scripts": {
        "test": "tape tests/*.js",
        "cover": "istanbul cover tape -- tests/*.js",
        "lint": "eslint .",
        "regenerate": "yo swaggerize --only=handlers,models,tests --framework <%=framework%> --apiPath <%=apiPathRel%>"
    },
    "main" : "./server"
}
